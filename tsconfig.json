{
    "compilerOptions": {
      "outDir": "/dist",
      "lib": ["ES2015", "dom"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "module": "ESNext",
      "target": "es5",
      "removeComments": true,
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node"
    },
    "include": ["src", "./declaration.d.ts"]
}